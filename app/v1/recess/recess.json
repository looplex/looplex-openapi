    {
      "url": "https://apim.looplex.com/recess",
      "description": "Feriados Server"
    }
  ],
  "security": [],
  "paths": {
    "/recess": {
      "get": {
        "tags": [
          "Feriados"
        ],
        "summary": "Lista feriados",
        "description": "Lista dias de feriados por intervalo de data e região",
        "operationId": "recess-get",
        "parameters": [
          {
            "$ref": "#/components/parameters/OcpApimSubscriptionKey"
          },
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "region",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DTORecess"
                  }
                }
              }
            }
          },
          "400": {
            "description": "BadRequest",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "`BadRequest`<br />Indica que o formato da requisição está incorreto",
                      "example": "Indica que o formato da requisição está incorreto"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "OcpApimSubscriptionKey": {
        "name": "Ocp-Apim-Subscription-Key",
        "in": "header",
        "description": "Subscription key provided by Looplex",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "schemas": {
      "DTORecess": {
        "title": "DTORecess",
        "type": "object",
        "properties": {
          "Data": {
            "type": "string"
          },
          "DiaValido": {
            "type": "boolean"
          },
          "AnoMesDia": {
            "type": "integer"
          },
          "AnoMes": {
            "type": "integer"
          },
          "Ano": {
            "type": "integer"
          },
          "Mes": {
            "type": "integer"
          },
          "Dia": {
            "type": "integer"
          },
          "DiaSemana": {
            "type": "integer"
          },
          "Feriado": {
            "type": "string"
          },
          "Regiao": {
            "type": "string"
          }
        }
      }
    }
  }
