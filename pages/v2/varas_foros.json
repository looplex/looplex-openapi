  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "in": "header",
        "name": "api_key"
      },
      "Ocp-Apim-Subscription-Key": {
        "type": "apiKey",
        "in": "header",
        "description": "Subscription key provided by Looplex",
        "name": "Ocp-Apim-Subscription-Key"
      },
      "auth_token": {
        "type": "apiKey",
        "in": "header",
        "name": "auth_token"
      },
      "basic_auth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "ForoResponse": {
        "title": "ForoResponse",
        "type": "object",
        "properties": {
          "id": {
            "description": "O identificador do item",
            "example": 2,
            "type": "integer"
          },
          "parentID": {
            "description": "O identificador do item do qual esse item é o filho",
            "example": 1,
            "type": "integer"
          },
          "name": {
            "description": "O nome desse item",
            "example": "Nome do foro / vara",
            "type": "string"
          },
          "hierarchy": {
            "description": "A hierarquia completa do item",
            "example": "1.2",
            "type": "string"
          },
          "status": {
            "description": "Indica se o item está ativo",
            "example": true,
            "type": "boolean"
          },
          "level": {
            "description": "Indica o nível desse item",
            "example": 2,
            "type": "integer"
          }
        }
      },
      "Foro": {
        "title": "Foro",
        "type": "object",
        "properties": {
          "parentID": {
            "description": "O identificador do item pai desse item",
            "example": 3,
            "type": "integer"
          },
          "name": {
            "description": "O nome do item",
            "example": "Fórum central",
            "type": "string"
          }
        },
        "required": [
          "parentID",
          "name"
        ]
      },
      "RitoResponse": {
        "title": "RitoResponse",
        "type": "object",
        "properties": {
          "id": {
            "description": "O identificador do rito",
            "example": 1,
            "type": "integer"
          },
          "groupID": {
            "description": "O identificador do grupo em que o rito está vinculado",
            "example": 2,
            "type": "integer"
          },
          "name": {
            "description": "O nome do rito",
            "example": "Nome do rito",
            "type": "string"
          },
          "status": {
            "description": "Indica se o rito está ativo",
            "example": true,
            "type": "boolean"
          }
        }
      },
      "Rito": {
        "title": "Rito",
        "type": "object",
        "properties": {
          "groupID": {
            "description": "O identificador do grupo no qual o novo rito será vinculado",
            "example": 2,
            "type": "integer"
          },
          "name": {
            "description": "O nome do rito",
            "example": "Execução Fiscal",
            "type": "string"
          }
        },
        "required": [
          "groupID",
          "name"
        ]
      }
    }
